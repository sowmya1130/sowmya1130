sum of even and odd in c
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d", &n);
    int arr[n];
    int oddSum = 0, evenSum = 0;

    // Read the array elements
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
        if (arr[i] % 2 == 0) {
            evenSum += arr[i]; 
        } else {
            oddSum += arr[i]; 
        }
    }

    printf("%d\n%d\n", oddSum, evenSum);
    return 0;
}
